<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="150dp"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/product_item"
        android:layoutDirection="ltr"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/productImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="2"
            android:padding="0dp"
            android:src="@drawable/materna" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

        <TextView
            android:id="@+id/productTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fjhkjhjkhkjhkjhkjhkj"
            android:textColor="#000000"
            android:textDirection="rtl"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/productDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fjhkjhjkhkjhkjhkjhkj"
            android:layout_below="@+id/productTitle"
            android:textColor="#000000"
            android:textDirection="rtl"/>
            <TextView
                android:id="@+id/productNumber"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/removeItemBtn"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:text="1"/>
            <Button
                android:id="@+id/addItemBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/productNumber"
                android:layout_alignParentBottom="true"
                android:text="+"/>
            <Button
                android:id="@+id/removeItemBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="-"/>
        </RelativeLayout>


        </LinearLayout>


</RelativeLayout>