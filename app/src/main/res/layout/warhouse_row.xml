<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">
    <EditText
        android:id="@+id/productCount"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/border_black_table"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:gravity="center"
        android:text="product item"/>
    <TextView
        android:id="@+id/productItem"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:paddingRight="7dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/border_black_table"
        android:text="product item "/>
    <TextView
        android:id="@+id/productNumber"
        android:background="@drawable/border_black_table"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:paddingRight="3dp"
        android:gravity="end"
        android:layout_toLeftOf="@id/productCount"
        android:layout_toRightOf="@+id/productItem"
        android:text="product number"/>

</RelativeLayout>