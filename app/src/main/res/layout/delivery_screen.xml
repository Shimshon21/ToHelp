<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/empty_v"
    android:layoutDirection="ltr"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:paddingHorizontal="10dp"
        android:orientation="vertical"
        >

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#26A65B"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:gravity="center"
                android:onClick="goToMissionScreen"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="בחר משימה"
                    android:textSize="20sp"
                    />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#4183D7"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="goToCurrentMission"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="משימה נוכחית"
                android:textSize="20sp"
                />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#979b99"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:paddingVertical="20dp"
        android:gravity="center"
        android:onClick="choseMissionClick"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="התנתק"
            android:textSize="20sp"
            />

    </RelativeLayout>


</RelativeLayout>